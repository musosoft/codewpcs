{
	"[css]": {
		"editor.defaultFormatter": "stylelint.vscode-stylelint",
		"editor.formatOnSave": false
	},
	"[scss]": {
		"editor.defaultFormatter": "stylelint.vscode-stylelint",
		"editor.formatOnSave": false
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": false
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": false
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": false
	},
	"[php]": {
		"editor.defaultFormatter": "obliviousharmony.vscode-php-codesniffer",
		"editor.formatOnSave": false
	},
	"phpCodeSniffer.standard": "Automatic",
	"phpCodeSniffer.autoExecutable": true,
	"css.validate": false,
	"scss.validate": false,
	"less.validate": false,
	"stylelint.validate": [ "css", "less", "postcss", "scss" ],
	"editor.codeActionsOnSave": {
		"source.fixAll": false,
		"source.fixAll.eslint": false
	},
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		"package.json": ".browserslist*, .editorconfig, .eslint*, .prettier*, .stylelint*, package-lock.json",
		"composer.json": ".phpcs*, phpcs.xml*, composer.lock",
		".gitignore": ".gitattributes, .gitconfig",
		".wpcs": "package.json, .browserslist*, .editorconfig, .eslint*, .prettier*, .stylelint*, package-lock.json, composer.json, .phpcs*, phpcs.xml*, composer.lock"
	}
}
